<main class='create'>
    <!-- Create Page (Only for logged-in users) -->
    <section id='create'>
        <div class='form'>
            <h2>Add item</h2>
            <form class='create-form' method='POST' action='/animals/create'>
                <input type='text' name='name' id='name' placeholder='Name' value='{{post.name}}' />
                <input type='text' name='years' id='years' placeholder='Years' value='{{post.years}}' />
                <input type='text' name='kind' id='kind' placeholder='Kind' value='{{post.kind}}' />
                <input type='text' name='image' id='animal-img' placeholder='Image url' value='{{post.image}}' />
                <input type='text' name='need' id='needs-of' placeholder='Needs of' value='{{post.need}}' />
                <input type='text' name='location' id='location' placeholder='Location' value='{{post.location}}' />
                <textarea id='description' placeholder='Description...' name='description'>{{post.description}}</textarea>

                <button type='submit'>Post</button>
            </form>
        </div>
    </section>
</main>