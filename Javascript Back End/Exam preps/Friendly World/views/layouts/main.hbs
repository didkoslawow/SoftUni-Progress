<html lang='en'>

    <head>
        <meta charset='UTF-8' />
        <meta http-equiv='X-UA-Compatible' content='IE=edge' />
        <meta name='viewport' content='width=device-width, initial-scale=1.0' />
        <link rel='stylesheet' href='/static/styles/styles.css' />
        <title>{{title}}</title>
    </head>
    <body>
        <div id='wrapper'>
            <header>
                <nav>
                    <div>
                        <a href='/'>Home</a>
                        <a href='/animals/catalog'>Dashboard</a>
                        <a href='/animals/search'>Search</a>
                    </div>
                    {{#if user}}
                        <div class='user'>
                            <a href='/animals/create'>Add Animal</a>
                            <a href='/auth/logout'>Logout</a>
                        </div>
                    {{else}}
                        <div class='guest'>
                            <a href='/auth/Login'>Login</a>
                            <a href='/auth/register'>Register</a>
                        </div>
                    {{/if}}
                </nav>
            </header>
            {{#if errors}}
                <div class='errorContainer'>
                    {{#each errors}}
                        <p>{{this}}</p>
                    {{/each}}
                </div>
            {{/if}}
            {{{body}}}
        </div>
        <footer>
            <p>@Friendly World</p>
        </footer>
    </body>
</html>