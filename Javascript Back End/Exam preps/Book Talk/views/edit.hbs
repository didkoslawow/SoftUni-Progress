<section class='edit-form-container'>
    <form action='/reviews/{{review._id}}/edit' method='POST'>
        <h3>Edit Book Review</h3>
        <label for='title'>Title</label>
        <input type='text' name='title' class='box' value='{{review.title}}' id='title' />
        <label for='author'>Author</label>
        <input type='text' name='author' class='box' value='{{review.author}}' id='author' />
        <label for='genre'>Genre</label>
        <input type='text' name='genre' class='box' value='{{review.genre}}' id='genre' />
        <label for='stars'>Stars</label>
        <input type='number' name='stars' class='box' value='{{review.stars}}' id='stars' />
        <label for='image'>Image</label>
        <input type='text' name='image' class='box' value='{{review.image}}' id='image' />
        <label for='review'>Review</label>
        <textarea class='box' name='review' id='review'>{{review.review}}</textarea>
        <input type='submit' value='Edit' class='btn' />
    </form>
</section>