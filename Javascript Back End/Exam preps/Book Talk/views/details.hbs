<section class='details-page'>
    <h1>Details</h1>
    <article class='details-card'>
        <article class='details-card-text'>
            <h2>Title:<br /> {{review.title}}</h2>
            <h3>Author: {{review.author}}</h3>
            <h3>Stars: {{review.stars}}</h3>
            <h3>Genre: {{review.genre}}</h3>
            <h3>Review: {{review.review}}</h3>
            {{#if user}}
                <div class='buttons'>
                    {{#if isOwner}}
                        <a href='/reviews/{{review._id}}/edit' class='btn-edit'>Edit</a>
                        <a href='/reviews/{{review._id}}/delete' class='btn-delete'>Delete</a>
                    {{else}}
                        {{#if hasWished}}
                            <p class='wish-pub'>You already added the book to your wish list</p>
                        {{else}}
                            <a href='/reviews/{{review._id}}/wish' class='btn-wish'>Wish to read</a>
                        {{/if}}
                    {{/if}}
                </div>
            {{/if}}
        </article>
        <article class='details-card-image'>
            <img src='{{review.image}}' />
        </article>

    </article>
</section>