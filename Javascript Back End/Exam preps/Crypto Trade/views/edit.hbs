<main>
    {{#if errors}}
        <div>
            <div class='errorContainer'>
                {{#each errors}}
                    <p>{{this}}</p>
                {{/each}}
            </div>
        </div>
    {{/if}}
    <section id='edit-container'>
        <div class='edit-container-info'>
            <h1>Edit Announcement</h1>
            <form action='/crypto/{{crypto._id}}/edit' method='POST'>
                <label for='name'>Name:</label>
                <input type='text' id='name' name='name' value='{{crypto.name}}' />
                <label for='image'>Image:</label>
                <input type='text' id='image' name='image' value='{{crypto.image}}' />
                <label for='price'>Price:</label>
                <input type='number' id='price' name='price' value='{{crypto.price}}' />
                <label for='description'>Description:</label>
                <textarea name='description' id='description'>{{crypto.description}}</textarea>
                <label for='payment'>Payment method:</label>
                <select id='payment' name='payment' value='{{crypto.payment}}'>
                    {{#each paymentMethods}}
                        {{{this}}}
                    {{/each}}
                </select>
                <input type='submit' id='btn' value='EDIT' />
            </form>
        </div>
    </section>
</main>