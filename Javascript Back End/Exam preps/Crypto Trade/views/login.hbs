<main>
    {{#if errors}}
        <div>
            <div class='errorContainer'>
                {{#each errors}}
                    <p>{{this}}</p>
                {{/each}}
            </div>
        </div>
    {{/if}}
    <div class='login-box'>
        <h1>Login</h1>
        <form action='/auth/login' method='POST'>
            <label for='email'>Email</label>
            <input type='text' name='email' id='email' placeholder='Email..' value='{{body.email}}' />
            <label for='password'>Password</label>
            <input type='password' name='password' id='password' placeholder='Password..' />
            <input type='submit' value='Submit' />
        </form>
        <p>Not have an account? <a href='/auth/register'>Register here</a></p>
    </div>
</main>