<main>
    <h1 class='text-center'>Courses</h1>
    <section>
        <a href='/courses/create' class='btn btn-warning'>Create Course</a>
        <form class='search float-right' method='GET' action='/'>
            <label>Search: </label>
            <input type='text' name='search' />
            <input type='submit' class='btn btn-primary' value='Search' />
        </form>
    </section>

    {{#if courses}}
        <div class='container mt-3'>
            <div class='row'>
                <div class='card-deck d-flex justify-content-center'>
                    {{#each courses}}
                        <div class='card mb-4'>
                            <img class='card-img-top' src='{{this.imageUrl}}' alt='Card image cap' width='400' />
                            <div class='card-body'>
                                <h4 class='card-title'>{{this.title}}</h4>
                            </div>
                            <div class='card-footer'>
                                <a href='/courses/{{this._id}}/details'><button
                                        type='button'
                                        class='btn btn-primary'
                                    >Details</button></a>
                                <small class='float-right'>{{this.createdAt}}</small>
                            </div>
                        </div>
                    {{/each}}
                </div>
            </div>
        </div>
    {{else}}
        <h3 class='text-center'>No courses...</h3>
    {{/if}}
</main>