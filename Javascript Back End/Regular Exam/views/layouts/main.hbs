<html lang='en'>
    <head>
        <meta charset='UTF-8' />
        <title>{{title}}</title>
        <link rel='stylesheet' href='/static/css/styles.css' />
    </head>
    <body>
        <div id='container'>
            <nav>
                <ul>
                    <li><a href='/'>Home</a></li>
                    <li><a href='/electronics'>Catalog</a></li>
                    {{#if user}}
                        <li><a href='/electronics/create'>Create Offer</a></li>
                        <li><a href='/electronics/search'>Search</a></li>
                        <li><a href='/auth/logout'>Logout</a></li>
                    {{else}}
                        <li><a href='/auth/login'>Login</a></li>
                        <li><a href='/auth/register'>Register</a></li>
                    {{/if}}
                </ul>

            </nav>
            {{#if errors}}
                <div class='errorContainer'>
                    {{#each errors}}
                        <p>{{this}}</p>
                    {{/each}}
                </div>
            {{/if}}
            {{{body}}}
            <footer>@SoftUni - JS Back-End - Second Hand Electronics 2023</footer>
        </div>
    </body>
</html>